---
import content from '@assets/content.jpg';

const autocadContent = [
  'OPTIMIZAÇÃO DE AMBIENTE DE TRABALHO',
  'ERGONOMIA E HARDWARE',
  'PRODUTIVIDADE',
  'FERRAMENTAS DE DESENHO',
  'FERRAMENTAS DE SELECÇÃO',
  'PROPRIEDADES DE OBJECTOS',
  'UNIDADES',
  'LAYERS',
  'BLOCOS',
  'COTAGENS',
  'REFERÊNCIAS EXTERNAS',
  'LAYOUTS, ESCALAS E IMPRESSÕES',
  'RESOLUÇÃO DE PROBLEMAS DE PRODUÇÃO',
];
---

<section
  class="min-h-screen bg-cover bg-center bg-no-repeat relative"
  style={{ backgroundImage: `url(${content.src})` }}
>
  {/* Dark overlay */}
  <div class="absolute inset-0 bg-black/70"></div>

  {/* Content */}
  <div class="relative z-10 min-h-screen flex items-center">
    <div class="container mx-auto px-4">
      <div class="flex justify-end">
        <div class="max-w-2xl text-right">
          <h2
            class="text-4xl md:text-5xl font-bold text-white mb-8 tracking-tight"
            style={{ textShadow: 'var(--text-shadow)' }}
          >
            CONTEÚDOS
          </h2>
          <h3
            class="text-3xl md:text-4xl font-bold text-white mb-12 tracking-tight"
            style={{ textShadow: 'var(--text-shadow)' }}
          >
            CURSO AUTOCAD 2D
          </h3>
          <div class="space-y-3">
            {
              autocadContent.map((item) => (
                <div
                  class="text-lg md:text-xl text-white font-medium"
                  style={{ textShadow: 'var(--text-shadow)' }}
                >
                  {item}
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
